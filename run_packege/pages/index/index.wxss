/* plugin/pages/index/index.wxss */
.run-index-map {
    width: 100vw;
    height: 100vh;
}

.run_index {
    position: absolute;
    top: 0;
    width: 100%;
    height: 100vh;
    /* background-image: linear-gradient(180deg, #FFFFFF 0%, rgba(255, 255, 255, 0.00) 100%); */
    background-color: rgba(255, 255, 255, 0.7);
    /* opacity: 0.5; */
    overflow: hidden;
    z-index: 1000;
}

.FAQ-btn {
    position: absolute;
    width: 80rpx;
    height: 80rpx;
    top: 12rpx;
    right: 24rpx;
}

.set-btn {
    position: absolute;
    width: 80rpx;
    height: 80rpx;
    top: 116rpx;
    right: 24rpx;
}

.sumkilometre {
    margin-top: 132rpx;
    width: 100%;
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
}

.sumkilometre-txt {
    /* position: absolute;
    top: 132rpx; */
    font-weight: Bold;
    font-size: 144rpx;
    color: #333333;
    width: 100%;
    display: flex;
    justify-content: center;
    /* align-items: center; */
}

.runlog-btn {
    font-weight: 400;
    font-size: 32rpx;
    color: #666666;
    display: flex;
    align-items: center;
    justify-content: center;
}

.runlog-btn-img {
    width: 40rpx;
    height: 40rpx;
}

.auth-hint {
    width: 100%;
    margin-top: 176rpx;
    text-align: center;
    /* display: flex;
    justify-content: center; */
}

.auth-hint-box {
    margin-bottom: 48rpx;
}

.auth-hint-txt {
    background: #FFFFFF;
    padding: 12rpx;
    border-radius: 16rpx;
    font-weight: 400;
    font-size: 28rpx;
    color: #666666;
}

.start-run-btn-box {
    position: absolute;
    bottom: 182rpx;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.start-run-btn {
    width: 180rpx;
    height: 180rpx;
    background: #4CDDB4;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    font-weight: 500;
    font-size: 40rpx;
    color: #FFFFFF;
}

.run-type-modal-title {
    font-weight: 500;
    font-size: 36rpx;
    color: #333333;
    text-align: center;
    margin-top: 48rpx;
}

.run-type-modal-box {
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    margin-top: 30px;
    margin-bottom: 30px;
}

.run-type-modal-box .run-type-modal-item {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 242rpx;
    height: 80rpx;
    background: #F7F8FA;
    border-radius: 16rpx;
    font-size: 28rpx;
    color: #666666;
}

.run-type-modal-box .run-type-modal-item-active {
    width: 242rpx;
    height: 80rpx;
    background: rgba(76,221,180,0.10);
    border: 2rpx solid #4CDDB4;
    border-radius: 8rpx;
    color: #4CDDB4;
}

.active-icon {
    width: 48rpx;
    height: 48rpx;
    position: absolute;
    bottom: 0;
    right: 0;
}

.run-open-btn-box {
    width: 100%;
    display: flex;
    justify-content: center;
    margin-bottom: 30px;
}

.run-open-btn {
    width: 552rpx;
    height: 104rpx;
    background: #4CDDB4;
    border-radius: 52rpx;
    font-size: 34rpx;
    color: #FFFFFF;
    line-height: 46rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}