<!--plugin/pages/run_page/components/runMapPanel/runMapPanel.wxml-->
<view>
    <view class="map-data-box">
        <view class="map-data">
            <view>
                <view class="map-data-num">7.48</view>
                <view class="map-data-unit">公里</view>
            </view>
            <view>
                <view class="map-data-num">11'12"</view>
                <view class="map-data-unit">平均配速</view>
            </view>
            <view>
                <view class="map-data-num">30:31</view>
                <view class="map-data-unit">总用时</view>
            </view>
            <view>
                <view class="map-data-num">123.45</view>
                <view class="map-data-unit">消耗千卡</view>
            </view>
        </view>
        <view class="map-data map-data-unit">
        </view>
    </view>
    <movable-area class="location-icon-area">
        <movable-view direction="all" class="location-icon-view">
            <image class="location-icon" src="https://ssl-pubpic.51yund.com/1221737859.png" bindtap="_toLocation"></image>
        </movable-view>
        <map 
            id="run-map"
            class="run-map"
            name="run_map" 
            longitude="{{newLongitude}}"
            latitude="{{newLatitude}}"
            show-location="true"
        ></map>
        <view class="back-icon">
            <image bindtap="hideMap" src="https://ssl-pubpic.51yund.com/1221737968.png"></image>
        </view>
    </movable-area>
    
</view>
