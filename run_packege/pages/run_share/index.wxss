/* run_packege/pages/run_share/index.wxss */
.img-area{
    background-color: #f6f8fa;
    padding-bottom: 20rpx;
    display: flex;
    flex-wrap: wrap;
}
.img-area image{
    margin: 0;
    padding: 0;
}
.line-box {
    width: 100%;
    display: flex;
    justify-content: center;
    /* align-items: center; */
    background-color: #FFFFFF;
}
.line {
    width: 710rpx;
    height: 8rpx;
    border-bottom: 1rpx solid #eeeeee;
}
.qrcode-box {
    width: 100%;
    /* width: 654rpx; */
    display: flex;
    /* flex-direction: row-reverse; */
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
    transition: all ease 0.5s;
    /* padding-bottom: 100rpx; */
    background-color: #FFFFFF;
    /* margin-top: 40rpx; */
    overflow: hidden;
    padding-top: 40rpx;
}
.qrcode-box view {
    width: 100%;
}

.qrcode-img {
    width: 132rpx;
    height: 132rpx;
    /* margin-left: 24rpx; */
    /* margin-top: 40rpx; */
}

.qrcode-txt {
    margin-top: 20rpx;
    margin-bottom: 40rpx;
    font-size: 28rpx;
    color: #333333;
    font-weight: 400;
    text-align: center;
}

.share-type-box {
    /* position: absolute; */
    /* bottom: 226rpx; */
    /* bottom: 0; */
    /* left: 0; */
    /* z-index: 99; */
    width: 100%;
    height: 226rpx;
    background: #FFFFFF;
    display: flex;
    justify-content: space-around;
    align-items: center;
    transition: all ease 0.5s;
    /* margin-top: 20rpx; */
    overflow: hidden;
}

.type-btn {
    text-align: center;
}

.type-btn image {
    width: 88rpx;
    height: 88rpx;
}

.type-btn view {
    font-weight: 400;
    font-size: 24rpx;
    color: #333333;
}