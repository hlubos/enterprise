/* pages/tabBar/home/home.wxss */
.header {
  padding: 20rpx 38rpx 20rpx 52rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  overflow-x: hidden;
}

.header .left .title {
  margin-bottom: 6rpx;
  font-family: PingFangSC-Medium;
  font-size: 48rpx;
  color: #333333;
  letter-spacing: 4rpx;
}

.header .left .desc {
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  color: #E0E0E0;
}

.header .right {
  width: 282rpx;
  height: 156rpx;
}

.nav {
  padding: 20rpx 38rpx 20rpx 52rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  overflow-x: hidden;
  font-weight: 500;
  font-size: 28rpx;
  color: #666666;
}

.nav .tle {
    margin-right: 40rpx;
    display: flex;
    flex-direction: column;
    /* flex-wrap: wrap; */
    justify-content: flex-end;
    align-items: center;
}

.nav .tle .name {
    height: 60rpx;
    display: flex;
    align-items: flex-end;
}

.nav .tle .tag{
    width: 36rpx;
    height: 8rpx;
    border-radius: 6rpx;
    margin-top: 8rpx;
}

.nav .active-tle {
  font-weight: 600;
  font-size: 44rpx;
  line-height: 60rpx;
  color: #4CDDB4;
}

.nav .active-tle .tag {
    background: #4CDDB4;
}

.kind-list {
  padding: 28rpx;
  display: flex;
  flex-wrap: wrap;
}

.kind-list .item {
  margin-bottom: 14rpx;
}

.kind-list .item:nth-child(2n) {
  margin-left: 14rpx;
}

.records {
  position: relative;
  font-size: 36rpx;
  height: 100rpx;
  line-height: 100rpx;
  color: #999999;
  padding: 8rpx 0;
  margin: 24rpx;
  background-color: #ffffff;
  border-radius: 12rpx;
  box-shadow: 0 0 10rpx 0 rgba(0,0,0,0.09);
}

.records-left {
  margin-left: 24rpx;
  display: inline-block;
}

.records-right {
  float: right;
  margin: 36rpx 24rpx;
  width: 28rpx;
  height: 28rpx;
}