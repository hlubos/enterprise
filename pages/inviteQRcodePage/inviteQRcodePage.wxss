@import '../../style/font.wxss';
.invite-join {
  width: 100%;
  min-height: 100vh;
  /* height: 100vh; */
  overflow: hidden;
  background-image: linear-gradient(
    49deg,
    #e7f4fd 0%,
    #fae3e4 41%,
    #fffcee 100%
