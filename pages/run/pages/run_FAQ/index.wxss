/* plugin/pages/FAQ/index.wxss */
.faq-nav {
  position: fixed;
  top: 0;
  left: 0;
  white-space: nowrap;
  overflow-x: scroll;
  overflow-y: hidden;
  text-align: center;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  font-weight: 400;
  font-size: 28rpx;
  color: #999999;
  background-color: #ffffff;
}
.nav-item {
  display: inline-block;
  padding: 0 .6rem;
}
.active-item {
  font-weight: 500;
  font-size: 28rpx;
  color: #4cddb4;
  /* border-bottom: 6rpx solid #4CDDB4; */
}
.faq-box {
  width: 100%;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
}
.faq-content {
  width: 654rpx;
}
.faq-title {
  font-weight: 500;
  font-size: 32rpx;
  color: #333333;
  margin-top: 48rpx;
}
.faq-text {
  font-weight: 400;
  font-size: 28rpx;
  color: #666666;
  margin-top: 24rpx;
}
.faq-solve-tle {
  font-weight: 500;
  font-size: 32rpx;
  color: #f86254;
  margin-top: 48rpx;
}
.faq-solve-con {
  font-weight: 400;
  font-size: 28rpx;
  color: #f86254;
  margin-top: 24rpx;
}
.faq-img {
  width: 100%;
  height: 560rpx;
}
.next-btn-box {
  /* position: absolute; */
  /* bottom: 148rpx; */
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 300rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #ffffff;
}
.next-btn {
  width: 552rpx;
  height: 104rpx;
  background: #4cddb4;
  border-radius: 52rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: 600;
  font-size: 34rpx;
  color: #ffffff;
}
.filler-box {
  position: relative;
  bottom: 0;
  width: 100vw;
  height: 300rpx;
  background-color: #ffffff;
}
