/* plugin/pages/run_set/index.wxss */
.right-info {
  display: flex;
}
.right-icon {
  width: 24rpx;
  height: 48rpx;
}

.map-style-list {
  margin: 20rpx auto;
  width: 688rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.map-style-item {
  /* width: 33.3%; */
  text-align: center;
  margin-top: 20rpx;
}
.map-icon {
  position: relative;
  width: 216rpx;
  height: 130rpx;
  background: #f7f8fa;
  border-radius: 8rpx;
}
.map-icon image {
  width: 100%;
  height: 100%;
}
.selectedMap {
  position: absolute;
  top: 0;
  left: 0;
}
.map-txt {
  font-size: 26rpx;
  color: #000000;
}
