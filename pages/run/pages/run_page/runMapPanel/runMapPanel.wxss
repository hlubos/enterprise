/* plugin/pages/run_page/components/runMapPanel/runMapPanel.wxss */
.map-data-box{
    position: fixed;
    /* position: absolute; */
    top: 0;
    left: 0;
    width: 100%;
    height: 200rpx;
    background-color: rgba(255, 255, 255, 0.7);
    z-index: 99;
    display: flex;
    /* align-items: center; */
    flex-wrap: wrap;
}
.map-data{
    display: flex;
    justify-content: space-around;
    width: 100%;
}
.map-data view {
    text-align: center;
}
.map-data-num {
    font-weight: Bold;
    font-size: 45rpx;
    color: #333333;
    line-height: 45rpx;
    margin-top: 60rpx;
}
.map-data-unit {
    font-size: 28rpx;
    color: #666666;
}
.location-icon-area{
    position: relative;
    width: 100%; 
    height: 100vh;
}
.location-icon-view{
    top: 30%;
    right: 0;
    z-index: 100; 
    width: 80rpx; 
    height: 80rpx;
}
.location-icon{
    width: 100%;
    height: 100%;
    /* background-color: rgba(255, 255, 255, 0.9); */
    display: flex;
    justify-content: center;
    align-items: center;
    /* border: rgba(0, 0, 0, 0.5) solid 1px; */
    /* border-radius: 5px; */
}
.run-map{
    width: 100%;
    height: 100%;
}
.back-icon {
    position: absolute;
    bottom: 80rpx;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}
.back-icon image {
    width: 80rpx;
    height: 80rpx;
}

.cover-smaller {
    width: 100rpx;
    height: 100rpx;
    position: absolute;
    z-index: 101;
    top: 400rpx;
    right: 10rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}