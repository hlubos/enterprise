/* components/customModal/customModal.wxss */
.custom-modal-container {
  width: 100%;
  height: 100%;
}

/* 有动画过渡 */
.modal-anime-visilble {
  visibility: visible;
  height: auto;
  opacity: 1;
  /* 进入 */
  transition: opacity 100ms ease;    
}

.modal-anime-hidden {
  visibility: hidden;
  opacity: 0;
  height: 0;
  /* 退出 */
  transition: height 0ms ease 100ms, visibility 100ms ease, opacity 100ms ease;    
}

/* 没有动画过渡 */
.modal-no-anime-visilble {
  visibility: visible;
  height: auto;
  opacity: 1;
}

.modal-no-anime-hidden {
  visibility: hidden;
  opacity: 0;
  height: 0;
}

.custom-modal-mask {
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
}

.custom-modal-content {
  position: fixed;
  z-index: 1001;
  width: 500rpx;
  max-width: 600rpx;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  text-align: center;
}

.modal-footer {
  display: flex;
}

.footer-btn {
  flex: 1;
}