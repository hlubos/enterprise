.skinBg {
  width: 100%;
  height: 100%;
  z-index: 4;
}

.skinBg,
.top {
  position: absolute;
  left: 0;
  top: 0;
}

.top {
  width: 100vw;
  height: 29vw;
}

.bottom {
  position: absolute;
  bottom: -2%;
  width: 100vw;
  height: 26vw;
  left: 50%;
  transform: translateX(-50%);
}

.touchPoint {
  position: absolute;
  font-size: 20px;
  color: #fff;
  z-index: 20;
  text-align: center;
  display: block;
  animation: mymove 2s infinite;
  animation-direction: alternate;
  animation-timing-function: ease-in-out;
}

@-webkit-keyframes mymove {
  0% {
    transform: scale(0.8);
  }

  25% {
    transform: scale(1);
  }

  50% {
    transform: scale(0.8);
  }

  75% {
    transform: scale(1);
  }

  100% {
    transform: scale(0.8);
  }
}

@keyframes mymove {
  0% {
    transform: scale(0.8);
  }

  25% {
    transform: scale(1);
  }

  50% {
    transform: scale(0.8);
  }

  75% {
    transform: scale(1);
  }

  100% {
    transform: scale(0.8);
  }
}
