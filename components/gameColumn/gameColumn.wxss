.topColumn {
  left: 0;
  top: 0rpx;
  width: 100%;
  z-index: 5;
}

.topColumn,
.topItem {
  position: absolute;
  height: 110rpx;
}

.topItem {
  width: 280rpx;
  top: 0;
  background: rgba(51, 51, 51, 0.9);
  color: #fff;
  font-size: 87rpx;
  font-weight: 700;
  font-style: italic;
  display: flex;
  align-items: center;
  border-radius: 50rpx;
  line-height: 110rpx;
}

.topItem.left {
  padding-left: 40rpx;
  left: -40rpx;
}

.topItem.right {
  right: -40rpx;
  width: 320rpx;
}

.topItem.right.progress {
  width: 500rpx;
}

.topItem cover-image {
  width: 80rpx;
  height: 80rpx;
  margin-left: 10rpx;
}

.top_item_num {
  width: 200rpx;
}

.topItem .progressImg {
  width: 360rpx;
  height: 80rpx;
  z-index: 1;
}

.topItem .progressInner {
  position: absolute;
  top: 50%;
  left: 108rpx;
  background: #22fe76;
  transform: translateY(-50%);
  height: 60rpx;
  width: 339rpx;
}
