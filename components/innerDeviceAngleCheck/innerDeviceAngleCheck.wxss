.gyroscopePage {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: #0074e8;
}

.tit {
  font-size: 54rpx;
  color: #fff;
  font-weight: 700;
  text-align: center;
  padding-top: 80rpx;
}

.scopeBar {
  position: absolute;
  right: 60rpx;
  top: 50%;
  transform: translateY(-50%);
  background: #0052a3;
  width: 140rpx;
  height: 700rpx;
  border-radius: 72rpx;
}

.scopeBar .point {
  position: absolute;
  width: 120rpx;
  height: 120rpx;
  left: 50%;
  transform: translateX(-50%);
  top: 10rpx;
}

.region {
  left: 0;
}

.countDownNum,
.region {
  position: absolute;
  width: 140rpx;
  height: 140rpx;
  top: 50%;
  transform: translateY(-50%);
}

.countDownNum {
  background: #fff;
  left: 0rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 140rpx;
  font-size: 88rpx;
  color: #0074e8;
  font-weight: 700;
  z-index: 2;
}

.gyroscope_body {
  width: 100%;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}

.coverBg {
  width: 100%;
}
